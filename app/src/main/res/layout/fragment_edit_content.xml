<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout android:id="@+id/EditContentActivityRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_primary">

        <ImageView
            android:id="@+id/editContentImage"
            style="@style/squared_images"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

        <EditText
            android:id="@+id/editTextEditContent"
            android:layout_below="@+id/editContentImage"
            style="@style/text_edit" />

        <Button
            android:id="@+id/buttonEditContentContentOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextEditContent"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="@string/ok_button" />

    </RelativeLayout>
</layout>