<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout android:id="@+id/SettingsActivityRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_primary">

        <ImageView
            android:id="@+id/settingsImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_baseline_settings_yellow_24" />

        <Button
            android:id="@+id/buttonQuestionList"
            style="@style/activity_main_buttons"
            android:layout_below="@+id/settingsImage"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="@string/question_list_button"
            app:cornerRadius="15dp"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/buttonActionList"
            style="@style/activity_main_buttons"
            android:layout_below="@+id/buttonQuestionList"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="@string/action_list_button"
            app:cornerRadius="15dp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
</layout>